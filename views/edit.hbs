<form action="/updata/{{ restaurant._id }}" method="PATCH" style="display: inline;">
    <div class="input-group mb-3">
        <input class="form-control" type="text" placeholder="name" name="name" value="{{ restaurant.name }}">
    </div>
    <div class="input-group mb-3">
        <input class="form-control" type="text" placeholder="description" name="name" value="{{ restaurant.description }}">
    </div>
    <div class="input-group-append">
        <button class="btn btn-success" type="submit">Save</button>
    </div>
</form>